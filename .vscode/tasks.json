{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "--config=clang_config",
                "//main:main"
            ]
        },
        {
            "label": "clean project",
            "type": "shell",
            "command": "bazel",
            "args": [
                "clean"
            ]
        }
    ]
}